<% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-12">
      <h1><%= link_to post.title, post %></h1>
      <small><%= post.author %></small>
      <small><%= post.created_at.to_s(:short) %></small>
      <div class="row">
        <div class="col-md-12">
          <p><%= post.content %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
